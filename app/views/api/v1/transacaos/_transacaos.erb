<div class='lista-direita'>

  <table class="table table-striped table-hover">

    <thead class='head dark'>
      <tr>
        <th nowrap onclick="order('data_transacao');">Data da Transação</th>
        <th nowrap onclick="order('valor_recebido');">Valor Recebido</th>
        <th nowrap onclick="order('forma_pagamento');">Forma de Pagamento</th>
        <th nowrap onclick="order('ordem_servico');">Ordem de Serviço</th>
        <th nowrap onclick="order('funcionario');">Funcionário</th>
      </tr>
    </thead> 

    <tbody>
    <% transacaos.each do |transacao| %>
    
      <tr class="<%= "active" if transacao.id.to_s == params[:id] %>" onclick="window.location.href='<%= edit_transacao_path(transacao) %>';">           
        <td nowrap><%= transacao.data_transacao %></td>      
        <td nowrap><%= number_to_currency(transacao.valor_recebido.to_f, delimiter: '', unit: 'R$ ') %></td>
        <td nowrap><%= transacao.forma_pagamento %></td>
        <td nowrap><%= transacao.ordem_servico.status_pagamento ? 'Saldada' : 'Em aberto' %></td>
        <td nowrap><%= transacao.funcionario.nome_completo %></td>
      </tr>
    
    <% end %>
    </tbody>
    
  </table>

</div>